# Database URL for SQLAlchemy
DATABASE_URL=sqlite:///./database.db

# --- Service URLs ---
# Addresses for the main API gateway to contact the microservices
STT_SERVICE_URL=http://localhost:8001
LLM_SERVICE_URL=http://localhost:8002
TTS_SERVICE_URL=http://localhost:8003

# --- AI Model Configuration ---
# Whisper model size (e.g., tiny, base, small, medium, large, medium.en)
WHISPER_MODEL=medium

# Hugging Face model for the LLM
LLM_MODEL=microsoft/phi-2

# --- Piper TTS Voice Paths ---
# Path to the Piper TTS voice model (.onnx file)
PIPER_VOICE_PATH=./models/tts/en_US-lessac-medium.onnx

# Path to the Piper TTS voice configuration (.json file)
PIPER_VOICE_CONFIG_PATH=./models/tts/en_US-lessac-medium.onnx.json